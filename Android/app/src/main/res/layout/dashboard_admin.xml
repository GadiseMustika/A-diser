<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme">

    <TextView
        android:id="@+id/text_dashboard_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_tpenduduk_admin"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/text_dashboard_admin"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/text_dashboard_admin"
        app:layout_constraintTop_toBottomOf="@+id/text_dashboard_admin"
        app:srcCompat="@drawable/button_sub" />

    <TextView
        android:id="@+id/text_tpenduduk_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Penduduk"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_tpenduduk_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_tpenduduk_admin"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="@+id/image_tpenduduk_admin"
        app:layout_constraintTop_toTopOf="@+id/image_tpenduduk_admin"
        app:layout_constraintVertical_bias="0.38" />

    <ImageView
        android:id="@+id/image_acc_admin"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_tpenduduk_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_tpenduduk_admin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_tpenduduk_admin"
        app:layout_constraintTop_toTopOf="@+id/image_tpenduduk_admin"
        app:layout_constraintVertical_bias="0.458"
        app:srcCompat="@drawable/ic_baseline_supervisor_account_24" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_tpenduduk_user"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:hint="@string/tpenduduk_admin"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_tpenduduk_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_tpenduduk_admin"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/image_tpenduduk_admin"
        app:layout_constraintTop_toTopOf="@+id/image_tpenduduk_admin"
        app:layout_constraintVertical_bias="0.725"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/image_surat_admin"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/image_tpenduduk_admin"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/image_tpenduduk_admin"
        app:layout_constraintTop_toBottomOf="@+id/image_tpenduduk_admin"
        app:srcCompat="@drawable/button_sub" />

    <TextView
        android:id="@+id/text_surat_admin"
        android:layout_width="104dp"
        android:layout_height="57dp"
        android:text="Surat Permohonan Yang Masuk"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_surat_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_surat_admin"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="@+id/image_surat_admin"
        app:layout_constraintTop_toTopOf="@+id/image_surat_admin"
        app:layout_constraintVertical_bias="0.19" />

    <ImageView
        android:id="@+id/image_acc2_admin"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_surat_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_surat_admin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_surat_admin"
        app:layout_constraintTop_toTopOf="@+id/image_surat_admin"
        app:layout_constraintVertical_bias="0.458"
        app:srcCompat="@drawable/ic_baseline_insert_drive_file_white_24" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_surat_admin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:hint="@string/surat_admin"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_surat_admin"
        app:layout_constraintEnd_toEndOf="@+id/image_surat_admin"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/image_surat_admin"
        app:layout_constraintTop_toTopOf="@+id/image_surat_admin"
        app:layout_constraintVertical_bias="0.862"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/light_theme"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bawah_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>