<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:id="@+id/container">

    <TextView
        android:id="@+id/txt_detail_surat_admin_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Detail Surat"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_detail_surat_admin_noSurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Nomor Surat"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_judul" />

    <TextView
        android:id="@+id/edit_detail_surat_admin_noSurat"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form"
        android:textColor="@color/black"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_detail_surat_admin_noSurat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_detail_surat_admin_noSurat"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_noSurat" />

    <TextView
        android:id="@+id/txt_detail_surat_admin_jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Jenis Surat"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_detail_surat_admin_noSurat" />

    <TextView
        android:id="@+id/edit_detail_surat_admin_jenis"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_detail_surat_admin_noSurat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_detail_surat_admin_noSurat"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_jenis" />

    <TextView
        android:id="@+id/txt_detail_surat_admin_nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="NIK"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_detail_surat_admin_jenis" />

    <TextView
        android:id="@+id/edit_detail_surat_admin_nik"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form"
        android:textColor="@color/black"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_detail_surat_admin_nik"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_detail_surat_admin_nik"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_nik" />

    <TextView
        android:id="@+id/txt_detail_surat_admin_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Nama"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_detail_surat_admin_nik" />

    <TextView
        android:id="@+id/edit_detail_surat_admin_nama"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_detail_surat_admin_nik"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_detail_surat_admin_nik"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_nama" />

    <TextView
        android:id="@+id/txt_detail_surat_admin_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Tanggal Pengajuan"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_detail_surat_admin_nama" />

    <TextView
        android:id="@+id/edit_detail_surat_admin_tgl"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_detail_surat_admin_nama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_detail_surat_admin_nama"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_surat_admin_tgl" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_detail_surat_admin_simpan"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_white_round"
        android:text="Simpan Data"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/spinner_surat"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/edit_detail_surat_admin_tgl"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="@+id/txt_detail_surat_admin_tgl"
        app:layout_constraintTop_toBottomOf="@+id/edit_detail_surat_admin_tgl"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_detail_surat_admin_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
