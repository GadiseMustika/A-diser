<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_beranda_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Layanan Surat"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_layanan_user"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_sub"
        android:text="Surat Keterangan Pindah"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/text_beranda_user"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/text_beranda_user"
        app:layout_constraintTop_toBottomOf="@+id/text_beranda_user" />

    <Button
        android:id="@+id/button_layanan_user2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_sub"
        android:text="Surat Keterangan Tidak Mampu"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/button_layanan_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_layanan_user"
        app:layout_constraintTop_toBottomOf="@+id/button_layanan_user" />

    <Button
        android:id="@+id/button_layanan_user3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_sub"
        android:text="Surat Keterangan Kepemilikan"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/button_layanan_user2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_layanan_user2"
        app:layout_constraintTop_toBottomOf="@+id/button_layanan_user2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/light_theme"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bawah_user" />

</androidx.constraintlayout.widget.ConstraintLayout>