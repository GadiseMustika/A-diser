<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/img_register_upload"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home3" />

    <TextView
        android:id="@+id/txt_reg_upload_buat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Buat Akun"
        android:textColor="@color/theme"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/img_register_upload"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/img_register_upload"
        app:layout_constraintTop_toBottomOf="@+id/img_register_upload" />

    <TextView
        android:id="@+id/txt_reg_upload_verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Verifikasi Data"
        android:textColor="@color/theme"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_reg_upload_buat"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/txt_reg_upload_buat"
        app:layout_constraintTop_toBottomOf="@+id/txt_reg_upload_buat" />

    <Button
        android:id="@+id/btn_reg_upload_ktp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/theme"
        android:text="Upload KTP"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/txt_reg_upload_desc"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/txt_reg_upload_desc"
        app:layout_constraintTop_toBottomOf="@+id/txt_reg_upload_desc" />

    <TextView
        android:id="@+id/txt_reg_upload_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Untuk Melengkapi Data Profil"
        android:textColor="@color/theme"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_reg_upload_verif"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/txt_reg_upload_verif"
        app:layout_constraintTop_toBottomOf="@+id/txt_reg_upload_verif" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reg_upload_lanjut"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:text="Lanjut"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_reg_upload_verif"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/txt_reg_upload_verif" />


</androidx.constraintlayout.widget.ConstraintLayout>